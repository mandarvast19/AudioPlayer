<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="62dp">

<ImageView
    android:id="@+id/albumArtPlaylist"
    android:layout_width="45dp"
    android:layout_height="42dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginBottom="8dp" />

<TextView
    android:id="@+id/playlistName"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_above="@+id/songTimePlaylist"
    android:layout_marginLeft="18dp"
    android:layout_marginBottom="3dp"
    android:layout_toRightOf="@id/albumArtPlaylist"
    android:text="Item1"
    android:singleLine="true"
    android:textColor="@android:color/black"
    android:textSize="16sp"
    />

    <TextView
        android:id="@+id/songArtistPlaylist"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/playlistName"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/albumArtPlaylist"
        android:singleLine="true"
        android:text="Sub"
        android:textSize="14sp" />

<TextView
    android:id="@+id/songTimePlaylist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/albumArtPlaylist"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginEnd="80dp"
    android:layout_marginRight="80dp"
    android:text="3:48"
    android:textColor="@android:color/black"
    android:textSize="14sp" />



</RelativeLayout>