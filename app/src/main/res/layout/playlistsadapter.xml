<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp">
    <ImageView
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:id="@+id/playlist_page"
        android:src="@drawable/ic_playlist_page"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/playlist_namesList"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:layout_toRightOf="@id/playlist_page"
        android:text="Name"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/three_dotplaylist"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_toRightOf="@id/playlist_namesList"
        android:layout_margin="10dp"/>

</RelativeLayout>